{
  "name": "@vba-blocks/monorepo",
  "private": true,
  "repository": "https://github.com/vba-blocks/vba-blocks.git",
  "author": "Tim Hall <tim.hall.engr@gmail.com>",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.{ts,js,json}\"",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "**/*.{ts,js,json}": ["prettier --write", "git add"]
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "moduleFileExtensions": ["ts", "js", "json"],
    "projects": ["packages/*"],
    "testRegex": "\\.(test|spec)\\.(ts|js)$",
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.25",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "lint-staged": "^4.0.4",
    "prettier": "^1.6.1",
    "ts-jest": "^20.0.10",
    "typescript": "^2.5.2"
  }
}
