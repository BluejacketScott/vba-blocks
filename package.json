{
  "name": "vba-blocks",
  "version": "0.0.0",
  "repository": "https://github.com/vba-blocks/vba-blocks.git",
  "author": "Tim Hall <tim.hall.engr@gmail.com> (https://github.com/timhall)",
  "license": "MIT",
  "bin": "lib/bin/vba-blocks.js",
  "main": "lib/index.js",
  "typings": "typings/index.d.ts",
  "scripts": {
    "format": "prettier --write \"**/*.{ts,js}\"",
    "test": "jest",
    "e2e": "jest --config e2e.config.js --runInBand",
    "build": "run-s build:compile build:bundle",
    "build:win": "run-s build build:addins build:pkg:win build:copy",
    "build:mac": "run-s build build:addins build:pkg:mac build:copy",
    "build:compile": "tsc",
    "build:bundle": "rollup -c",
    "build:pkg:win": "pkg --targets node8-win-x86 -o dist/bin/vba-blocks.exe .",
    "build:pkg:mac": "pkg --targets node8-mac-x64 -o dist/bin/vba-blocks .",
    "build:copy": "node scripts/copy",
    "build:addins": "cd addins && node ../scripts/build",
    "build:bootstrap": "cd scripts/bootstrap && node ../../lib/bin/vba-blocks build",
    "build:native": "neon build --release"
  },
  "pkg": {
    "scripts": [
      "lib/bin/*.js",
      "lib/sat-solver.js"
    ]
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.(js|ts)$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "dependencies": {
    "archiver": "^2.0.0",
    "chalk": "^2.3.0",
    "debug": "^3.1.0",
    "decompress": "^4.2.0",
    "dedent": "^0.7.0",
    "dugite": "^1.39.0",
    "fs-extra": "^7.0.0",
    "logic-solver": "^2.0.1",
    "mri": "^1.1.0",
    "sanitize-filename": "^1.6.1",
    "semver": "^5.4.1",
    "tmp": "^0.0.33",
    "toml": "^2.3.2",
    "tomlify-j0.4": "^3.0.0",
    "walk-sync": "^0.3.2"
  },
  "devDependencies": {
    "@types/archiver": "^2.0.0",
    "@types/fs-extra": "^5.0.2",
    "@types/jest": "^22.2.3",
    "@types/node": "^8.10.18",
    "@types/semver": "^5.4.0",
    "@types/tar": "^4.0.0",
    "@types/tmp": "^0.0.33",
    "jest": "^23.1.0",
    "neon-cli": "^0.2.0",
    "npm-run-all": "^4.1.2",
    "pkg": "^4.3.1",
    "prettier": "^1.6.1",
    "rollup": "^0.63.5",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "ts-jest": "^23.0.0",
    "typescript": "^3.0.1"
  }
}
