{
  "name": "vba-blocks",
  "version": "0.0.0",
  "repository": "https://github.com/vba-blocks/vba-blocks.git",
  "author": "Tim Hall <tim.hall.engr@gmail.com> (https://github.com/timhall)",
  "license": "MIT",
  "bin": "lib/bin/vba-blocks.js",
  "main": "lib/index.js",
  "typings": "typings/index.d.ts",
  "scripts": {
    "format": "prettier --write \"**/*.{ts,js}\"",
    "precommit": "lint-staged",
    "test": "jest",
    "e2e": "jest --config e2e.config.js --runInBand",
    "build": "run-s build:compile build:addins build:cli",
    "build:cli": "run-s build:bundle build:pkg build:copy",
    "build:compile": "tsc",
    "build:bundle": "rollup -c",
    "build:pkg": "run-p build:pkg:win-x86 build:pkg:win-x64 build:pkg:mac",
    "build:pkg:win-x86":
      "pkg --targets node8-win-x86 -o dist/bin/vba-blocks-x86.exe .",
    "build:pkg:win-x64":
      "pkg --targets node8-win-x64 -o dist/bin/vba-blocks.exe .",
    "build:pkg:mac": "pkg --targets node8-mac-x64 -o dist/bin/vba-blocks .",
    "build:copy": "node scripts/copy",
    "build:addins": "cd addins && node ../scripts/build",
    "build:bootstrap":
      "cd scripts/bootstrap && node ../../lib/bin/vba-blocks build"
  },
  "pkg": {
    "scripts": ["lib/bin/*.js", "lib/sat-solver.js"]
  },
  "lint-staged": {
    "**/*.{ts,js,json}": ["prettier --write", "git add"]
  },
  "prettier": {
    "singleQuote": true
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": ["ts", "js", "json"],
    "testRegex": "(/__tests__/.*|(\\.|/)(test))\\.(js|ts)$",
    "transform": {
      "^.+\\.ts$": "ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      "@vba-blocks/helpers(.*)": "<rootDir>/tests/__helpers__$1",
      "@vba-blocks/fixtures(.*)": "<rootDir>/tests/__fixtures__$1"
    }
  },
  "dependencies": {
    "archiver": "^2.0.0",
    "chalk": "^2.3.0",
    "debug": "^3.1.0",
    "decompress": "^4.2.0",
    "dedent": "^0.7.0",
    "detect-newline": "^2.1.0",
    "dugite": "^1.39.0",
    "fs-extra": "^6.0.0",
    "logic-solver": "^2.0.1",
    "mri": "^1.1.0",
    "sanitize-filename": "^1.6.1",
    "semver": "^5.4.1",
    "tar": "^4.0.1",
    "tmp": "^0.0.33",
    "toml": "^2.3.2",
    "v8-compile-cache": "^1.1.2",
    "walk-sync": "^0.3.2"
  },
  "devDependencies": {
    "@types/archiver": "^2.0.0",
    "@types/fs-extra": "^5.0.2",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.25",
    "@types/semver": "^5.4.0",
    "@types/tar": "^4.0.0",
    "@types/tmp": "^0.0.33",
    "copyfiles": "^2.0.0",
    "cross-env": "^5.1.4",
    "husky": "^0.14.3",
    "jest": "^21.0.0",
    "lint-staged": "^4.0.4",
    "npm-run-all": "^4.1.2",
    "pkg": "^4.3.1",
    "prettier": "^1.6.1",
    "resolve-from": "^4.0.0",
    "resolve-pkg": "^1.0.0",
    "rollup": "^0.58.2",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "ts-jest": "^20.0.10",
    "typescript": "^2.8.1"
  }
}
