{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "target": "esnext",
    "lib": ["es2017"],
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "src/**/__mocks__/*",
    "src/**/__tests__/*"
  ]
}
