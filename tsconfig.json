{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "typings",
    "rootDir": "src",
    "target": "esnext",
    "lib": ["es2017"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "typings",
    "src/**/__mocks__/*",
    "src/**/__tests__/*"
  ]
}
