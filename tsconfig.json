{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "esnext",
    "lib": ["es2017"],
    "skipLibCheck": true,
    "noEmit": true,
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "vba-blocks": ["./lib"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"],
  "exclude": ["node_modules", "src/**/__mocks__/*"]
}
