{
  "compilerOptions": {
    "strict": true,
    "target": "es2019",
    "lib": ["es2020"],
    "module": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tests/**/*.ts", "src/**/__mocks__/*"]
}
